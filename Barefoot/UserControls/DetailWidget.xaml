<UserControl x:Class="Barefoot.DetailWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" MinHeight="90" MinWidth="200">
    
    <Grid Grid.Row="1" Grid.Column="0" Background="{StaticResource PhoneContrastBackgroundBrush}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="widgetLabelTextBlock" Text="caption" HorizontalAlignment="Left" FontSize="{StaticResource PhoneFontSizeSmall}" Foreground="{StaticResource PhoneContrastForegroundBrush}" Margin="3" />
        <TextBlock Grid.Row="1" Grid.Column="0" Name="widgetTextBlock" Text="text" HorizontalAlignment="Center" FontSize="{StaticResource PhoneFontSizeMediumLarge}" Foreground="{StaticResource PhoneContrastForegroundBrush}" FontWeight="Black" Margin="3" />
    </Grid>
</UserControl>
